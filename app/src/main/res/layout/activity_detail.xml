<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/activity_detail_title"
        tools:text="Chappie"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/activity_detail_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_detail_title"
        tools:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/activity_detail_year"
        tools:text="2015"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@id/activity_detail_title"
        app:layout_constraintStart_toEndOf="@id/activity_detail_image"/>

    <TextView
        android:id="@+id/activity_detail_duration"
        tools:text="120min"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@id/activity_detail_year"
        app:layout_constraintStart_toEndOf="@id/activity_detail_image"/>

    <TextView
        android:id="@+id/activity_detail_rating"
        tools:text="8.3/10"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@id/activity_detail_duration"
        app:layout_constraintStart_toEndOf="@id/activity_detail_image"/>

    <Button
        android:id="@+id/activity_detail_favorite"
        android:text="@string/activity_detail_text_favorite"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@id/activity_detail_rating"
        app:layout_constraintStart_toEndOf="@id/activity_detail_image"/>

    <TextView
        android:id="@+id/activity_detail_description"
        tools:text="Every child comes into the world full of promise..."
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@id/activity_detail_image"
        app:layout_constraintStart_toStartOf="parent"/>

</android.support.constraint.ConstraintLayout>